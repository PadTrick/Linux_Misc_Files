[Unit]
Description=PipeWire Loopback

[Service]
ExecStart=/usr/bin/pactl load-module module-loopback source=alsa_input.pci-0000_0f_00.4.analog-stereo sink=alsa_output.pci-0000_0f_00.4.analog-stereo
ExecStop=/usr/bin/pactl unload-module module-loopback
Type=oneshot
RemainAfterExit=yes

[Install]
WantedBy=default.target
